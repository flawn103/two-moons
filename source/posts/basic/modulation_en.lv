              { "value": "C4", "time": 0, "duration": 4 },
              { "value": "C5", "time": 0, "duration": 4 },
              { "value": "F4", "time": 4, "duration": 4 },
              { "value": "A4", "time": 4, "duration": 4 },
              { "value": "C5", "time": 4, "duration": 4 },
              { "value": "F5", "time": 4, "duration": 4 }
