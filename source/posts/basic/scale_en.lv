        {
          "text": "octave",
          "bold": true
        },
        {
          "text": " we pick a note every certain interval. The first note is "
        },
        {
          "type": "note",
          "id": "8e1873d5-cf9c-4072-acc9-cb41ca86d0aa",
          "noteStr": "C4",
          "editing": false,
          "children": [
            {
              "text": ""
            }
